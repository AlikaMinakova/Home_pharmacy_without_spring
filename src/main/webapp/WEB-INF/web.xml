<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <listener>
        <listener-class>org.example.AppContextListener</listener-class>
    </listener>
    
    <!-- DiseaseServlet -->
    <servlet>
        <servlet-name>DiseaseServlet</servlet-name>
        <servlet-class>org.example.controller.disease.DiseaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DiseaseServlet</servlet-name>
        <url-pattern>/diseases</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DiseaseAddServlet</servlet-name>
        <servlet-class>org.example.controller.disease.DiseaseAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DiseaseAddServlet</servlet-name>
        <url-pattern>/diseases/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DiseaseUpdateServlet</servlet-name>
        <servlet-class>org.example.controller.disease.DiseaseUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DiseaseUpdateServlet</servlet-name>
        <url-pattern>/diseases/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SymptomServlet</servlet-name>
        <servlet-class>org.example.controller.symptom.SymptomServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SymptomServlet</servlet-name>
        <url-pattern>/symptoms</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SymptomAddServlet</servlet-name>
        <servlet-class>org.example.controller.symptom.SymptomAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SymptomAddServlet</servlet-name>
        <url-pattern>/symptoms/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SymptomUpdateServlet</servlet-name>
        <servlet-class>org.example.controller.symptom.SymptomUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SymptomUpdateServlet</servlet-name>
        <url-pattern>/symptoms/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PharmacyServlet</servlet-name>
        <servlet-class>org.example.controller.pharmacy.PharmacyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PharmacyServlet</servlet-name>
        <url-pattern>/pharmacies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PharmacyDetailServlet</servlet-name>
        <servlet-class>org.example.controller.pharmacy.PharmacyDetailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PharmacyDetailServlet</servlet-name>
        <url-pattern>/pharmacies/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PharmacyAddServlet</servlet-name>
        <servlet-class>org.example.controller.pharmacy.PharmacyAddServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PharmacyAddServlet</servlet-name>
        <url-pattern>/pharmacies/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PharmacyUpdateServlet</servlet-name>
        <servlet-class>org.example.controller.pharmacy.PharmacyUpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PharmacyUpdateServlet</servlet-name>
        <url-pattern>/pharmacies/edit/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PharmacyDeleteServlet</servlet-name>
        <servlet-class>org.example.controller.pharmacy.PharmacyDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PharmacyDeleteServlet</servlet-name>
        <url-pattern>/pharmacies/delete/*</url-pattern>
    </servlet-mapping>

</web-app>
